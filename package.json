{
  "name": "mondo",
  "productName": "Mondo",
  "version": "0.9.2",
  "description": "The one anime client",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "mondo",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "Icon/Mondo.ico"
    },
    "nsis": {
      "installerIcon": "Icon/Mondo.ico",
      "uninstallerIcon": "Icon/Mondo.ico",
      "uninstallDisplayName": "Mondo",
      "license": "LICENSE",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/bacelarhenrique/mondo.git"
  },
  "keywords": [],
  "author": {
    "name": "Henrique Bacelar",
    "email": "bacelarhenrique8@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "appVersion": "0.9.2",
        "buildVersion": "0.9.2",
        "icon": "Icon/Mondo.ico",
        "name": "Mondo"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Mondo"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "productName": "Mondo"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "anitomy-js": "^5.0.0",
    "axios": "^0.20.0",
    "cheerio": "^1.0.0-rc.3",
    "discord-rich-presence": "0.0.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "9.2.1"
  }
}
